{%- style -%}
  /* Sectoin Dynamic Spcing */
  #shopify-section-{{ section.id }} {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px;
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    #shopify-section-{{ section.id }} {
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}


<div class="page-width">
  <div class="timeline-wrapper">
    {% for block in section.blocks %}
      <div class="row-individual {% if block.settings.img_right %}img-right{% endif %}">
        <div class="row-image"><img src="{{block.settings.img | img_url: 'master'}}" alt=""></div>
        <div class="row-title"><p>{{block.settings.title}}</p></div>
      </div>
    {% endfor %}
  </div>
</div>



{% schema %}
{
  "name": "Timeline",
  "class": "section section-timeline",
  "settings": [
    {
      "type": "header",
      "content": "Section Margin/Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 40
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "row",
      "name": "Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Row Text",
          "default": "JULY 2014"
        },
        {
          "type": "image_picker",
          "id": "img",
          "label": "Choose Image"
        },
        {
          "type": "checkbox",
          "id": "img_right",
          "label": "Image on the Right side",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Timeline",
      "category": "Custom Item",
      "blocks": [
        {"type": "row"},
        {"type": "row"},
        {"type": "row"},
        {"type": "row"}
      ]
    }
  ]
}
{% endschema %}